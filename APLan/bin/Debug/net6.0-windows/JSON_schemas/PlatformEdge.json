{
    "type": "object",
    "properties": {
        "$type": {
            "type": "string"
        },
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string",
            "pattern": "^[a-zA-Z_0-9]*$"
        },
        "version": {
            "type": "string",
            "format": "uuid"
        },
        "appliesToLinearContiguousTrackArea": {
            "type": "string",
            "format": "uuid"
        },
        "hasStopLocation": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            },
            "minItems": 1
        },
        "hasAccessViaTracks": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "format": "uuid"
                }
            ]
        },
        "situatedSide": {
            "type": "string",
            "enum": [
                "Right",
                "Left"
            ]
        },
        "length": {
            "type": "number",
            "minimum": 0.001,
            "maximum": 999.999
        }
    },
    "required": [
        "id",
        "name",
        "version",
        "appliesToLinearContiguousTrackArea",
        "hasStopLocation",
        "hasAccessViaTracks",
        "situatedSide",
        "length"
    ],
    "additionalProperties": false
}